{
  "extends": "./node_modules/@tsconfig/node14/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "module": "Node16",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "./dist/@appsensorlike/appsensorlike/dist",
    "moduleResolution": "Node16",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/access-controllers/**/*.ts",
    "./src/analysis-engines/**/*.ts",
    "./src/configuration-modes/**/*.ts",
    "./src/core/**/*.ts",
    "./src/execution-modes/appsensor-local/**/*.ts",
    "./src/http/*.ts",
    "./src/logging/*.ts",
    "./src/reporting-engines/*.ts",
    "./src/storage-providers/appsensor-storage-in-memory/*.ts",
    "./src/utils/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/core/core_web.ts",
    "./src/analysis-engines/appsensor-analysis-rules/tests/**/*.ts",
    "./src/configuration-modes/appsensor-configuration-json/tests/**/*.ts",
    "./src/configuration-modes/appsensor-configuration-json/client/tests/**/*.ts",
    "./src/configuration-modes/appsensor-configuration-json/server/tests/**/*.ts",
    "./src/core/tests/**/*.ts",
    "./src/execution-modes/appsensor-local/tests/**/*.ts",
    "./src/execution-modes/tests/**",
    "./src/tests/**/*.ts"
  ]
}
