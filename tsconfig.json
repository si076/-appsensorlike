{
  "extends": "./node_modules/@tsconfig/node14/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",//"ES6",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "types": [
      "node"
    ]
    // "emitDecoratorMetadata": true,
    // "allowJs": true,
    // "declaration": true,
    // "declarationMap": true
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]

}
